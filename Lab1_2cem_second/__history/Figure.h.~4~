#include<math.h>
class figure
{
public:

virtual double showSquare();

};

class cirk
{
protected:
double r;
double s,p;

public:

   //	cirk(double r)
	//{
	 //  this->r=r;
	//}

	void get(double r)
	{
	 this->r=r;
	}

	double showSquare()
	{
		   s=3.14*r*r;
		   return s;
	}

	double showPerimetr()
	{
		   p=2*3.14*r;
		   return p;
	}


};

class rectangle
{

protected:
double a,b;
double s,p;

public:

	//rectangle(double a,double b)
	//{
	 //  this->a=a;
	  // this->b=b;
	//}

	void get(double a,double b)
	{
	 this->a=a;
	 this->b=b;
	}

	double showSquare()
	{
		   s=a*b;
		   return s;
	}

		double showPerimetr()
	{
		   p=2*(a+b);
		   return p;
	}

};
